<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="welcome" prefHeight="500.0" prefWidth="800.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.ecosolutions.oms.application.WelcomeController">
   <center>
      <VBox id="login" maxHeight="-Infinity" maxWidth="200.0" prefHeight="300.0" prefWidth="237.0" styleClass="form" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="title" text="Login" />
                <Label text="Email" />
                <TextField fx:id="email" prefHeight="25.0" prefWidth="200.0">
               <cursor>
                  <Cursor fx:constant="CROSSHAIR" />
               </cursor>
            </TextField>
                <Label text="Password" />
            <PasswordField fx:id="password" />
                <Button mnemonicParsing="false" onAction="#login" prefHeight="40.0" text="Login" />
         </children>
      </VBox>
   </center>
</BorderPane>
